<section id="eventos" class="schedule section-padding">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="section-title-header text-center">
            <h2 class="section-title wow fadeInUp" data-wow-delay="0.2s">Eventos</h2>
            <p class="wow fadeInDown" data-wow-delay="0.2s"></p>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-12 mb-5 text-center">
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <%
              var i = 0 
              eventos.forEach(evento => { 
              i++
            %>
              <li class="nav-item">
              <a class="nav-link <% if( i == 1)  { %> active <% } %>" id="<%= evento.abreviacion %>-tab" data-toggle="tab" href="#<%= evento.abreviacion %>" role="tab" aria-controls="<%= evento.abreviacion %>" <% if( i == 1)  { %> aria-expanded="true" <% } %>>
                <div class="item-text">
                  <h4><%= evento.abreviacion %></h4>
                </div>
              </a>
            </li>
              
            <% }) %>
  
          </ul>
        </div>
        <div class="col-12">
          <div class="schedule-area row wow fadeInDown" data-wow-delay="0.3s">
            <div class="schedule-tab-content col-12 clearfix">
              <div class="tab-content" id="myTabContent">
  
                <%
                  var i = 0 
                  eventos.forEach( evento => { 
                  i++
                %>
                
                  <div class="tab-pane fade <% if( i ==1) { %> show active <% } %>" id="<%= evento.abreviacion %>" role="tabpanel" aria-labelledby="<%= evento.abreviacion %>-tab">
                    <div id="accordion">
                      <div class="card">
                        <div id="heading<%= i %>">
                          <div class="schedule-slot-time">
                            <span><%= evento.abreviacion %></span>
                          </div>
                          <div class="collapsed card-header" data-toggle="collapse" data-target="#collapse<%= i %>" aria-expanded="false" aria-controls="collapse<%= i %>">                    
                            <h4><%= evento.nombre %></h4>
                          </div>
                        </div>
                        <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
                          <div class="card-body">
                            <p> <%- evento.descripcion.replace(/\r\n/g, "<br>") %> </p><br>
                            <div class="col-12 text-center"><a href="<%= evento.link  %>" class="btn btn-common">Para más información</a></div>
                            
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
  
                <% }) %>
                
                
                
                
  
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>